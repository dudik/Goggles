<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <androidx.preference.ListPreference
        android:defaultValue="true"
        android:entries="@array/currencies"
        android:entryValues="@array/currencies"
        android:icon="@drawable/ic_currency_24"
        android:key="currency"
        android:title="@string/currency"
        app:defaultValue="EUR"
        app:useSimpleSummaryProvider="true"
        />
    <androidx.preference.ListPreference
        android:defaultValue="true"
        android:entries="@array/limit"
        android:entryValues="@array/limit"
        android:icon="@drawable/ic_baseline_access_time_24"
        android:key="repeatInterval"
        android:title="@string/limit"
        app:defaultValue="4"
        app:useSimpleSummaryProvider="true"
        />
</androidx.preference.PreferenceScreen>
